<p style="color: green"><%= notice %></p>
<div class="container">
  <h1>Games</h1>
</div>
<br>
<%= render "games/search_form" %>
<br>
<div class ="container">
  <div id="games">
    <% @games.each do |game| %>
      <%= render game %>
      <p>
        <%= link_to "Show this game", game %>
      </p>
    <% end %>
  </div>
  <% if current_user and current_user.admin? %>
    <%= link_to "New game", new_game_path, class:'btn btn-primary'%>
  <% end %>
</div>
