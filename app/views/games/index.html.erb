<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center"> Games </h1>
  <div class="text-center"><%= link_to "New Game", new_game_path, class:"btn btn-primary" if current_user and current_user.admin? %></div>
  <%= render "games/search_form" %>
<br>

  <div class="grid-4" id="games">
    
    <% @games.each do |game| %>

      <div class="box">

        <div style="padding: 10px; text-align: right;">
          <%= "%.2f" % game.average_score.to_f %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z"/>
          </svg>
          (<%= game.reviews_count %>)
        </div>

        <% if game.image.attached? %>
          <%= link_to image_tag(game.image, :class => 'img-box'), game, style: 'color: black;' %>
        <% else %>
          <%= link_to image_tag('default.png', :class => 'img-box'), game, style: 'color: black;' %>
        <% end %>

        <div class="container">
          <h6 style="text-align: left;"><%= link_to game.title.truncate(32), game, class:"text-decoration-none" %></h6>
          
          <div class="row">
            <div class="col-8"><p class="box-info-left"><%= game.platform %></p></div>
            <div class="col"><p class="box-info-right"><%= game.release_date.year %></p></div>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>


<br />










